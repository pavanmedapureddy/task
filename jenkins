pipeline {
    agent any

    environment {
        DEPLOY_USER = 'ubuntu' // server SSH username
        DEPLOY_HOST = 'YOUR_SERVER_IP' // replace with your server IP
        DEPLOY_PATH = '/var/www/html' // path where HTML will be hosted
        SSH_KEY = '/var/lib/jenkins/.ssh/id_rsa' // Jenkins private key for SSH
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Add build steps if needed (e.g., npm build)
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add test steps if needed
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying project to server...'
                sh """
                scp -i ${SSH_KEY} -r * ${DEPLOY_USER}@${DEPLOY_HOST}:${DEPLOY_PATH}
                ssh -i ${SSH_KEY} ${DEPLOY_USER}@${DEPLOY_HOST} 'sudo systemctl restart nginx'
                """
            }
        }
    }

    post {
        always {
            echo 'This will always run after all stages.'
        }
        success {
            echo 'Pipeline succeeded! Your site should now be live.'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
